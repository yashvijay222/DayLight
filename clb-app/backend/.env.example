# DayLight Backend Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Google Calendar Integration
# =============================================================================
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/api/calendar/callback

# Set to false to use real Google Calendar API
USE_MOCK_DATA=true

# =============================================================================
# SmartSpectra SDK Configuration
# =============================================================================
# Get your API key from: https://physiology.presagetech.com
SMARTSPECTRA_API_KEY=your_api_key_here

# =============================================================================
# Presage Daemon Connection
# =============================================================================
# These are set automatically by docker-compose for internal communication
# Only modify if running services separately

# Hostname of the Presage daemon container
PRESAGE_DAEMON_HOST=presage

# TCP port for metrics output (daemon -> backend)
PRESAGE_DAEMON_PORT=9002

# TCP port for video input (backend -> daemon)
PRESAGE_VIDEO_PORT=9001

# =============================================================================
# Session Recording Configuration
# =============================================================================
# Directory where session video recordings are stored
# In Docker, this is mounted as a volume for persistence
PRESAGE_RECORDINGS_DIR=/app/recordings

# Default frame rate for video recording (frames per second)
PRESAGE_VIDEO_FPS=30

# =============================================================================
# OpenAI API Key
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
